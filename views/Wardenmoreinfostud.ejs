<% include ./partial/header %>
<div
  class="col-sm-9"
  style="margin: 50px 125px;    text-align: -webkit-center; margin-top: 100px;"
>
  <form
    action="/warden/<%=warden.id%>/leave/<%=student.id%>/info"
    method="POST"
  >
    <div
      class="container-fluid bg-3 text-center"
      
    >
      
      <br />
      <div class="row">
        <div class="col-sm-4">
          <img
            style="border-radius: 100%"
            src="<%=student.image%>"
            alt="image"
          />
          <h1 style="margin-top: 30px;"><%=student.name %></h1>
        </div>
        <%student.leaves.forEach(function(leave){%>
        <div class="col-sm-4" style="margin-left: 100px;" >
          <h3><strong> Subject:</strong><%=leave.subject %></h3>
          <h3>Status:<%=leave.wardenstatus %></h3>
          <h3>From:<%=moment(leave.to).format('DD/MM/YYYY') %></h3>
          <h3>To:<%=moment(leave.from).format('DD/MM/YYYY') %></h3>
          <h3><%=leave.days%></h3>
          <h3>Hostel:<%=student.hostel%></h3>
          <h3>Department:<%=student.department %></h3>
          <div style="float:inherit">
            <input
              type="submit"
              class="btn btn-block btn-success"
              name="action"
              value="Approve"
            />
            <input
              type="submit"
              class="btn btn-block btn-danger"
              name="action"
              value="Decline"
            />
          </div>
        </div>

        <%})%>
      </div>
    </div>
    <a
    style="width: 100%;
  padding: 12px;
  border: none;
  border-radius: 4px;
  margin: 5px 0;
  opacity: 0.85;
  display: inline-block;
  font-size: 17px;
  line-height: 20px;
  text-decoration: none;" href="/">Go Back</a>
  </div>
  </form>
</div>
<% include ./partial/footer %>
