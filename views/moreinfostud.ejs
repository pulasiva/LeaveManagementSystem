<% include ./partial/header %><% include ./partial/hodfunction %>
<div
  class="col-sm-6"
  style="    flex: 0 0 50%;
    max-width: 60%;
    margin-left: 431px;
    margin-top: -251px;  text-align: -webkit-center;"
>
  <form action="/hod/<%=hod.id%>/leave/<%=student.id%>/info" method="POST">
    <div class="container-fluid bg-3 text-center">
      
      
      <br />
      <div class="row" >
        <div class="col-sm-4">
          <img
            style="height:150px;width:150px;border-radius: 100%;margin-top: 40px;"
            src="<%=student.image%>"
            alt="image"
          />
          <h1 style="margin-top: 20px;"><%=student.name %></h1>
          
        </div>
        <%student.leaves.forEach(function(leave){%>
        <div class="col-sm-4" style="width: 100%;margin-top: 40px;">
          <h3><strong> Subject:</strong> <%=leave.subject %> </h3>
          <h3>Department: <%=student.department %></h3>
          <h3>Status: <%=leave.status %></h3>
          <h3>From: <%=moment(leave.to).format('DD/MM/YYYY') %></h3>
          <h3>To:  <%=moment(leave.from).format('DD/MM/YYYY') %></h3>
       
          
          <h3>No.of days: <%=leave.days%></h3>
          <div class="col-sm-6"style="margin-left:60px">
            <input
              type="submit"
              class="btn btn-block btn-success"
              name="action"
              value="Approve"
            />
            <input
              type="submit"
              class="btn btn-block btn-danger"
              name="action"
              value="Deny"
            />
          </div>
        </div>

        <%})%>
      </div>
      
    </div>
  </form>
  <% include ./partial/footer %>
</div>
